{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksConfig": {
      "providers": ["python"],
      "buildCmd": "pip install -r backend/requirements.txt"
    }
  },
  "deploy": {
    "startCommand": "gunicorn app:app --chdir backend -b 0.0.0.0:$PORT",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}