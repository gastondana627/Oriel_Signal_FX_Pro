{
  "build": {
    "builder": "DOCKERFILE"
  },
  "deploy": {
    "startCommand": "cd backend && python -m flask db upgrade && gunicorn oriel_backend:app -b 0.0.0.0:$PORT --workers=2 --timeout=120 --access-logfile=- --error-logfile=- --preload",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 30,
    "healthcheckInterval": 30,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  },
  "environments": {
    "production": {
      "variables": {
        "FLASK_ENV": "production",
        "PYTHONPATH": "/app/backend",
        "HTTPS_ONLY": "true",
        "LOG_LEVEL": "INFO"
      }
    }
  },
  "services": [
    {
      "name": "web",
      "source": {
        "type": "dockerfile"
      },
      "variables": {
        "FLASK_ENV": "production",
        "PYTHONPATH": "/app/backend"
      }
    },
    {
      "name": "worker",
      "source": {
        "type": "dockerfile"
      },
      "startCommand": "cd backend && python worker.py",
      "variables": {
        "FLASK_ENV": "production",
        "PYTHONPATH": "/app/backend"
      }
    }
  ]
}